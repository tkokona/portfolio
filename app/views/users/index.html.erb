<main>
    <p id="notice"></p>
    <div class="container px-5 px-sm-0">
      <div class="row">
        <%= render 'exams/userinfo', user: @user %>
        <div class="col-md-8 offset-md-1">
          <h2>ユーザー一覧</h2>
          <table class="table">
            <thead>
              <tr>
                <th>image</th>
                <th>名前</th>
                <th colspan="3"></th>
              </tr>
            </thead>
            <tbody>
              <% @users.each do |user| %>
                <tr>
                  <td>
                    <%= attachment_image_tag user, :profile_image, size: "80x80", format:'jpg', fallback:"default-image.jpg" %>
                  </td>
                  <td><%= user.name %></td>
                  <td><%= link_to "Show", user_path(user) %></td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
</main>